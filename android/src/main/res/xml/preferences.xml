<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <Preference
        android:title="@string/title_settings_notification"
        android:icon="@drawable/ic_notifications_black_24dp">
        <intent
            android:targetPackage="@string/application_id"
            android:targetClass="nl.fhict.happynews.android.activity.NotificationSettingsActivity"/>
    </Preference>
    <Preference
        android:title="@string/title_settings_sources"
        android:icon="@drawable/ic_forum_black_24dp">
        <intent
            android:targetPackage="@string/application_id"
            android:targetClass="nl.fhict.happynews.android.activity.SourcesSettingsActivity"/>
    </Preference>
    <Preference
        android:title="@string/title_settings_about"
        android:icon="@drawable/ic_info_outline_black_24dp">
        <intent
            android:targetPackage="@string/application_id"
            android:targetClass="nl.fhict.happynews.android.activity.AboutActivity"/>
    </Preference>
    <Preference
        android:title="@string/title_settings_rate_app"
        android:icon="@drawable/ic_grade_black_24dp">
        <intent
            android:action="android.intent.action.VIEW"
            android:data="https://play.google.com/store/apps/details?id=nl.fhict.happynews.android"/>
    </Preference>
</PreferenceScreen>
